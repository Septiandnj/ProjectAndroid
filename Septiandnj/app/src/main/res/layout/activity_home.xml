<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.layout.id.septian.Home"
    android:background="@drawable/dwn">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Linear Layout Sederhana"
        android:id="@+id/LinearLayout"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Linear Layout Relative"
        android:id="@+id/LayoutSederhana"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Linear Layout Table"
        android:id="@+id/TampilanLayoutTabel"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Menampilkan Gambar Android"
        android:id="@+id/GambarAndroid"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Teks Autocomplete"
        android:id="@+id/AutoCompleteSederhana"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Kotak Dialog"
        android:id="@+id/DialogBox"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Picker"
        android:id="@+id/picker"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="CheckBox"
        android:id="@+id/checkBox"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Radio Button"
        android:id="@+id/RadioButton"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Selection Widget"
        android:id="@+id/Seleksi"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#ffff0100"
        android:text="Service Sederhana"
        android:id="@+id/ServiceSederhana"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffff0100"
            android:text="Playing Audio"
            android:id="@+id/PlayingAudio"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffff0100"
            android:text="Calculator Berat Badan"
            android:id="@+id/Calculator"/>
    </LinearLayout>
</ScrollView>
